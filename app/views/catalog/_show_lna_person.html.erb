<%= render partial: 'show_default', locals: { document: @document } =%>


<% LnaAppointment.find_in_batches(isDependentOf_ssim: @document.id) do |results| %>
  <% results.each do |appoint| %>
    <h3><%= appoint['vcard_title_tesim'].first =%> appointment</h3>
    <%= render partial: 'show_default', locals: { document: SolrDocument.new(appoint) } =%>
  <% end %>
<% end %>


<% LnaAccount.find_in_batches(isDependentOf_ssim: @document.id) do |results| %>
  <% results.each do |account| %>
    <h3><%= account['dc_title_tesim'].first =%> account</h3>
    <%= render partial: 'show_default', locals: { document: SolrDocument.new(account) } =%>
  <% end %>
<% end %>	
