<nav class="pager">
	<form id="pagerForm" class="hidden">
		<% if params
            params.each do |k, v|
            	if k != 'page' && k != 'controller' && k != 'action' && k != 'authenticity_token'%>
            		<%= hidden_field_tag(k, v) %>
            	<% end
            end
        end %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	</form>
	<a class="firstPage" rel="first" title="First Page"><i class="fa fa-fast-backward"></i></a>
	<a class="previousPage" rel="previous"><i class="fa fa-step-backward"></i></a>
	<span class="currentPage"><span>1</span></span>
	<a class="nextPage" rel="next"><i class="fa fa-step-forward"></i></a>
	<a class="lastPage" rel="last" title="Last Page"><i class="fa fa-fast-forward"></i></a>
</nav>