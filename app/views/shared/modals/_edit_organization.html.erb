<% if current_user.admin? || current_user.creator? || current_user.editor? %>
<div class="modal fade editOrganizationModal formModal" id="editOrganizationModal" tabindex="-1" role="dialog" aria-labelledby="editOrganizationModal" title="Edit an Organization">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form data-lna-query="editOrg" class="formTwoColumn" accept-charset="UTF-8" data-opt="<%= params[:id] %>" data-refresh="true" data-tag-delimiter=";;;" data-load="editOrg">
          <div><label>Unique ID</label><input name="org:identifier" required></input></div>
          <div><label>Preferred Label</label><input name="skos:prefLabel" required></input></div>
          <div><label>Other Labels</label><input name="skos:altLabel" class="tagBehavior"></input></div>
          <div><label>Purpose</label><input name="org:purpose"></input></div>
          <div><label>Date Begun</label><input name="owltime:hasBeginning" class="dateBehavior" required></input></div>
          <div><label>Date Ended</label><input name="owltime:hasEnd" class="dateBehavior"></input></div>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <button type="submit" title="submit">Update</button>
        </form>
        <% if current_user.admin? %>
        <form data-lna-query="deleteOrg" accept-charset="UTF-8" class="formTwoColumn" data-confirm="true" data-opt="<%= params[:id] %>" data-handler="goHome">
        <div class="centered">OR</div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token, {:id => nil} %>
        <button type="submit" title="Delete" class="warning" name="delete">Delete Organization</button>
        </form>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>