<div class="modal fade editAccountModal formModal" id="editAccountModal" tabindex="-1" role="dialog" aria-labelledby="editAccountModal" title="Edit an Account for this Person">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <form data-lna-query="editAccount" class="formTwoColumn" data-opt="<%= @short_id %>/account" data-no-ajax="true" data-load="editAccount">       
          <div><label>Title</label><input name="dc:title"></input></div>          
          <div><label>ID</label><input name="accountID" class="changeBehavior" data-onchange="mergeAccountName"></input></div>
          <%= hidden_field_tag "foaf:accountServiceHomepage" %> 
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag "foaf:accountName" %>
          <%= hidden_field_tag "dc:creator", "https://jb.dac.dartmouth.edu/lna/person/" + @short_id %>
          <button type="submit" title="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
